<?php

function connect(){
    $user = "root";
    $pass = "1234";
    $server = "localhost";
    $port = "3306";
    $database = "escolar";
    
    $con = mysqli_connect($server, $user, $pass, $database);
    
    
    if(!$con){
        echo "não houve exito na conexão";
    } else{
        echo "conexão realizada com sucesso";
        
    }
    
    return $con;
    
}

?>

